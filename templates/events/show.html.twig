{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}

<div class="container">
    <h1>Events</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date_and_start_time</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>Contact_email</th>
                <td>{{ event.contactEmail }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ event.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ event.address }}</td>
            </tr>
            <tr>
                <th>Events_url</th>
                <td>{{ event.eventsUrl }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
        </tbody>
    </table>
    

    <a class="btn btn-primary" href="{{ path('app_events_index') }}">Back to list</a>

    <a class="btn btn-warning" href="{{ path('app_events_edit', {'id': event.id}) }}">Edit</a>

    {{ include('events/_delete_form.html.twig') }}

    </div>
{% endblock %}
